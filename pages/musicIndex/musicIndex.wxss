/* pages/musicIndex/musicIndex.wxss */
.baseContainer{
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    background-color: white;
}

/* 轮播图样式 */
.banners{
    height: 300rpx;
    width: 100%;
}

.banners_item{
    height: 100%;
    width: 100%;
    align-items: center;
}

.banners_item image{
    width: 100%;
    height: 100%;
}

/* 五个图标导航样式 */
.nacContainer{
    display: flex;
    flex-direction: row;
    width: 100%;
}

.navItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: crimson;
    color: white;
    margin: 20rpx 0;
}

.navItem text{
    font-size: 26rpx;
}

/* 推荐歌曲标题样式 */
.recommendContainer{
    padding: 20rpx;
    /* padding-bottom: 20rpx; */
}

.recommendContainer .header .title{
    font-size: 24rpx;
    line-height: 80rpx;
    color: grey;
}

.recommendContainer .header .more{
    float: right;
    border: 1rpx solid #333;
    border-radius: 30rpx;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
}

/* 推荐歌曲内容样式 */
.recommendScroll{
    display: flex;
}

.scrollItem{
    width: 200rpx;
    margin: 10rpx;
}

.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text{
    font-size: 22rpx;
    /* 单行文本溢出时使用省略号代替 */
    /* display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */

    /* 多行文本溢出时使用省略号代替 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}